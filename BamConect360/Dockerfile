# Usar Node.js 18 LTS
FROM node:18-alpine

# Crear directorio de la aplicaci칩n
WORKDIR /app

# Copiar package.json y package-lock.json desde la carpeta backend
COPY backend/package*.json ./

# Instalar dependencias
RUN npm ci --only=production

# Copiar el c칩digo fuente del backend
COPY backend/ .

# Crear directorio para uploads
RUN mkdir -p uploads

# Exponer el puerto que Railway usar치
EXPOSE $PORT

# Comando para ejecutar la aplicaci칩n
CMD ["node", "server.js"]
